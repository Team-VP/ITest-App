@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ITestApp.Web.Areas.Administration.Models.DashboardViewModels.IndexViewModel

@{

    ViewData["Title"] = "Index";
}

<div id="page" class="container">
    <h2>Dashboard</h2>
    <hr />
    <div>
        <p><b>Welcome @Model.AdminName </b></p>
    </div>

    <div class="category-tabs">
        <ul class="nav nav-tabs">
            <li class="nav-item active">
                <a class="nav-link in active" data-toggle="tab" href="#your-tests" id="main-key">Your Tests List</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#tests-results">Tests Results</a>
            </li>
            <li style="float:right; margin-right: 15px">
                <div>
                    <a class="btn btn-primary" asp-action="New" asp-controller="ManageTest" asp-area="Administration">Create New Test</a>
                </div>
            </li>
        </ul>

    </div>
    <div class="tab-content">
        <div id="your-tests" class="tab-pane fade in active">
            <div class="container" style="width:100%; margin-top: 30px">
                <table id="admins-tests" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Test Name</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th class="text-justify">Ations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var test in Model.Tests)
                        {
                            <tr id="@test.Id">
                                <td>@test.TestName</td>
                                <td>@test.CategoryName</td>
                                <td>@test.Status</td>
                                <td class="text-justify">
                                    <div class="text-center">
                                        @if (test.Status == "Published")
                                        {
                                            <a class="btn btn-primary" disabled="disabled">Publish</a>
                                            <a class="btn btn-primary" id="@test.Id" disabled="disabled">Edit</a>
                                            <a class="btn btn-primary" id="@test.Id" asp-action="Disable" asp-controller="Dashboard" asp-area="Administration" asp-route-id="@test.Id" name="disable">Disable</a>
                                        }
                                        else if (test.Status == "Draft")
                                        {
                                            <a class="btn btn-primary" id="@test.Id" asp-action="Publish" asp-controller="Dashboard" asp-area="Administration" asp-route-id="@test.Id" name="publish">Publish</a>
                                            <a class="btn btn-primary" asp-action="Edit" asp-controller="ManageTest" asp-area="Administration" asp-route-id="@test.Id" name="edit">Edit</a>
                                            <a class="btn btn-primary" asp-action="Delete" asp-controller="Dashboard" asp-area="Administration" asp-route-id="@test.Id" name="delete">Delete</a>
                                        }

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div id="tests-results" class="tab-pane fade">
            <div class="container" style="width:100%; margin-top: 30px">
                <table id="results-tabse" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Test Name</th>
                            <th>User Name</th>
                            <th>Categories</th>
                            <th>Requested Time</th>
                            <th>Execution Time</th>
                            <th>Results</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var test in Model.UserResults)
                        {
                            <tr>
                                <td>@test.TestName</td>
                                <td>@test.UserName</td>
                                <td>@test.Category</td>
                                <td>@test.RequestedTime min</td>
                                <td>@test.ExecutionTime min</td>
                                <td>@test.Result</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.0/jquery-confirm.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.0/jquery-confirm.min.css">
    <script src="~/js/admin-dashboard.js"></script>
}
