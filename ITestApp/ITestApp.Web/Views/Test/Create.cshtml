@using ITestApp.Web.Models.TestViewModels
@model ITestApp.Web.Models.TestViewModels.PostTestViewModel
@{
    ViewData["Title"] = "New Test";
    var categories = (List<PostCategoryViewModel>)TempData["Categories"];
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Test" asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Test name" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredTime"></label>
                <input asp-for="RequiredTime" class="form-control" placeholder="Required time" />
                <span asp-validation-for="RequiredTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Category"></label>
                    <select asp-for="Category" class="form-control" id="categories-select">
                        @foreach (var category in categories)
                        {
                            <option>@category.Name</option>
                        }
                    </select>
                </div>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
            <hr />
            <input type="button" name="Add" value="Add question" id="add-question-btn" />
            <div id="question-container">

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/creating-question.js"></script>
}
